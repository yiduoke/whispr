{
  "manifest_version": 3,
  "name": "Nostr Dissenter (Svelte)",
  "version": "0.3",
  "description": "Decentralized pageâ€‘level comments via Nostr (custom kind 40001)",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "contentScript.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/sidebar.html",
        "contentScript.js"
      ],
      "use_dynamic_url": false
    }
  ],
  "action": {
    "default_title": "Nostr Dissenter"
  }
}
